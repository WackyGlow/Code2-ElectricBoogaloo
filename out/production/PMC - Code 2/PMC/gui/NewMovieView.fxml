<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="250.0" minWidth="310.0" prefHeight="250.0" prefWidth="226.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PMC.gui.NewMovieViewController">
   <center>
      <VBox maxHeight="220.0" prefHeight="220.0" prefWidth="310.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Name:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="newMovieName" minWidth="180.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="40.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="IMDB Rating:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="newMovieImdbRating" minWidth="180.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="70.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Personal Rating:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="newMoviePersonalRating" minWidth="180.0">
                     <HBox.margin>
                        <Insets bottom="3.0" right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="100.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Last watched:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="lastViewed" minWidth="180.0" onAction="#handleLastViewed">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </DatePicker>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="130.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Filepath:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="newMovieFilepath" maxWidth="150.0" minWidth="151.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="filePath" mnemonicParsing="false" onAction="#handleFilePath" text="...">
                     <HBox.margin>
                        <Insets left="5.0" right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="144.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label text="Genre:">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox minWidth="180.0" prefWidth="180.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets top="15.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="newMovieCreate" mnemonicParsing="false" onAction="#handleNewMovieCreate" text="Create" />
            <Button fx:id="newMovieCancel" mnemonicParsing="false" onAction="#handleNewMovieCancel" text="Cancel" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="5.0" right="20.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
